{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "FluxShare",
    "version": "1.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "FluxShare",
        "fullscreen": false,
        "width": 1280,
        "height": 720
      }
    ],
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": [
          "$APPCACHE/**",
          "$APPDATA/**",
          "$APP/**",
          "$RESOURCE/**",
          "$HOME/**",
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$DOWNLOAD/**",
          "$TEMP/**",
          "**/fluxshare-archives/**"
        ]
      }
    }
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  }
}
